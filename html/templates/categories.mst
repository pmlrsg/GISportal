{{! List of used variables for this template:
   category - The category
   name - The name to be shown for the category
}}

<div>
   <label for="select-{{tag}}" class="indicator-dropdown">{{tag}}<span class="icon_arrow"></span></label>

   <select multiple id="select-{{tag}}" class="hide-select" data-id="{{tag}}">
      {{#indicators}}
         <option value="{{name}}">{{name}}</option>
      {{/indicators}}
   </select>

   <ul data-id="{{tag}}" class="hidden fake-select panel-list grid-list">
      {{#indicators}}
         <li data-name="{{name}}">
            <div class="icon_loading icon-svg grid-cell icon-column">loading</div>
            <p class="grid-cell fill">{{name}}</p>
            <label for="cat-{{tagModified}}-toggleVisibility-{{modified}}" class="icon_checkbox icon-svg no-stroke icon-column grid-cell" title="Show/Hide {{name}}">Show/Hide</label>
            <input type="checkbox" id="cat-{{tagModified}}-toggleVisibility-{{modified}}" data-tag="{{tag}}" data-name="{{name}}" class="js-toggleVisibility js-icon-trigger panel-tab-trigger">
         </li>
      {{/indicators}}
   </ul>
</div>

