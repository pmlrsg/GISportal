
html(lang="en")
  head
    title User Login
    link(rel="stylesheet", type="text/css", href="../../css/login.css")
    script(type="text/javascript", src="../../login.js")
    link(rel="icon", type="image/png", href="../../favicon/favicon-32x32.png")
  body(class="login")
    div.userLogin
        h1 User Login
        if (messageText)
          div()&attributes({'class': messageStatus})
            | #{messageText}
        p You are required to login before being allowed access to this application
        p &nbsp;
        if google 
          div
            a(href="/app/user/auth/google")
              img(src="/img/sign-in-with-google.png", style="width:200px;height:auto")
        if saml 
          div
            a(href="/app/user/auth/saml")
              img(src="/img/sign-in-with-microsoft.png", style="width:197px;height:auto;padding-left:3px;margin-top:20px")